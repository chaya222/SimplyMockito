<?xml version="1.0" encoding="utf-8"?><androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    tools:context=".MainActivity">    <TextView        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:text="@string/hey_folks_nready_to_see_git_hub_profiles"        android:textAlignment="center"        android:lineSpacingMultiplier="1.3"        android:layout_marginStart="@dimen/dp_30"        android:layout_marginEnd="@dimen/dp_30"        android:textColor="@color/colorPrimary"        android:fontFamily="@font/josefinsansbold"        android:textSize="@dimen/sp_20"        app:layout_constraintBottom_toTopOf="@id/tvName"        android:layout_marginBottom="@dimen/dp_100"/>    <EditText        android:id="@+id/tvName"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginStart="@dimen/dp_30"        android:layout_marginEnd="@dimen/dp_30"        android:textColor="@color/colorPrimary"        android:background="@null"        android:fontFamily="@font/josefinsansbold"        android:hint="@string/github_login_name"        android:textSize="@dimen/sp_18"        app:layout_constraintBottom_toBottomOf="parent"        app:layout_constraintLeft_toLeftOf="parent"        app:layout_constraintRight_toRightOf="parent"        app:layout_constraintTop_toTopOf="parent" />    <View        android:layout_width="0dp"        android:layout_height="@dimen/dp_2"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintEnd_toEndOf="parent"        android:background="@color/colorPrimary"        android:layout_marginStart="@dimen/dp_30"        android:layout_marginEnd="@dimen/dp_30"        android:layout_marginTop="@dimen/dp_5"        app:layout_constraintTop_toBottomOf="@id/tvName" />    <androidx.cardview.widget.CardView        android:id="@+id/btnShow"        android:layout_width="@dimen/dp_150"        android:layout_height="@dimen/dp_40"        app:layout_constraintTop_toBottomOf="@id/tvName"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintEnd_toEndOf="parent"        android:layout_marginTop="@dimen/dp_50"        app:cardCornerRadius="@dimen/dp_20"        app:cardElevation="@dimen/dp_5"        app:cardBackgroundColor="@color/colorPrimary"        android:text="show">        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_gravity="center"            android:textColor="@color/white"            android:fontFamily="@font/josefinsansbold"            android:text="@string/show_profile"/>    </androidx.cardview.widget.CardView></androidx.constraintlayout.widget.ConstraintLayout>